    },
    {
      "type": "color",
      "id": "fg_color",
      "label": "Text Color"
    },
    {
      "type": "color_background",
      "id": "bg_color",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "fg_color_desktop",
      "label": "Desktop Text Color"
    }
  ],
