      "id": "mobile_video",
      "label": "Mobile Video",
      "visible_if": "{{ section.settings.media_source == 'video' }}"
    },
    {
      "type": "video",
      "id": "desktop_video",
      "label": "Desktop Video",
      "visible_if": "{{ section.settings.media_source == 'video' }}"
    },
    {
      "type": "select",
      "id": "desktop_media_height",
      "label": "Desktop Media Height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "full",
          "label": "Fit Content"
        }
      ],
      "default": "full"
    },
    {
      "type": "select",
      "id": "mobile_media_height",
      "label": "Mobile Media Height",
      "options": [
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "full",
          "label": "Fit Content"
        }
