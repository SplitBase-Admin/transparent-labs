{{ 'review-carousel.css' | asset_url | stylesheet_tag }}
{% assign section_main_class = "review-carousel-section" %}

<section class="{{ section_main_class }}" id="section-{{ section.id }}">
  <div class="review-carousel-wrapper">
    <div class="review-carousel-header">
      {% render 'five-stars' %}
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>
  
    <div class="review-carousel-content">   
      <div class="review-carousel-container">
        <div class="swiper-wrapper">
          {% if template.name == 'collection' %}
            {% if collection.metafields.custom.review_carousel != blank %}
              {% for review_list in collection.metafields.custom.review_carousel.value %}          
                <div class="swiper-slide review-item">
                  <div class="review-content-inner">
                    <div class="author-details">
                      {% if review_list.author_name != blank %}
                        <div class="author-initial">{{ review_list.author_name | slice: 0, 1 }}</div>
                        <div class="author-name">{{ review_list.author_name }}</div>
                      {% endif %}
                    </div>
                    {% if review_list.review_title != blank %}
                      <div class="review-title">{{ review_list.review_title }}</div>
                    {% endif %}
                    {% if review_list.review_description != blank %}
                      <div class="review-description">{{ review_list.review_description | metafield_tag }}</div>
                    {% endif %}

                  </div>

                  {% if review_list.add_product != blank %}
                    {% assign product = review_list.add_product.value %}
                    <div class="review-product">
                      <div class="review-product-image">
                        {% assign selected_variant = product.selected_or_first_available_variant %}
                        {% if selected_variant.media %}
                          {% assign variant_image = selected_variant.media.preview_image %}
                          <img src="{{ variant_image.src | img_url: 'large' }}" alt="{{ variant_image.alt }}" loading="lazy" width="100%" height="100%" />
                        {% else %}
                          <!-- Fallback to product's first image if the variant has no media -->
                          {% if product.media.size > 0 %}
                            {% assign first_image = product.media | first %}
                            {% if first_image.media_type == 'image' %}
                              <img src="{{ first_image.preview_image.src | img_url: 'large' }}" alt="{{ first_image.alt }}" loading="lazy" width="100%" height="100%" />
                            {% endif %}
                          {% endif %}
                        {% endif %}
                  
                      </div>
                      <div class="review-product-details">
                        <div class="review-product-name">{{ product.title }}</div>
                        <a href="{{ product.url }}" class="review-product-link link"><span>shop product</span> {% render 'right-arrow' %}</a>
                      </div>
                    </div>
                  {% endif %}
                </div>
              {% endfor %}      
            {% else %}
              {% for block in section.blocks %}
                <div class="swiper-slide review-item">
                  {% render 'review-carousel-item',
                    block: block 
                  %}
                </div>
              {% endfor %}             
            {% endif %}
          {% else %}
            {% for block in section.blocks %}
              <div class="swiper-slide review-item">
                {% render 'review-carousel-item',
                  block: block 
                %}
              </div>
            {% endfor %}
          {% endif %}
          

        </div>
        <div class="review-carousel-slider-bottom">
          <div class="review-carousel-pagination"></div>
          <!-- Fractional Pagination (Slide Counter) -->
          <div class="review-carousel-fraction slider-counter-fraction">
            <span class="review-carousel-pagination-current">01</span>/<span class="review-carousel-pagination-total">{% if section.blocks.size < 10 %}0{% endif %}{{ section.blocks.size }}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


{% style %}

  #section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
  }

  #section-{{ section.id }} .review-item {
    background-color: {{ section.settings.block_bg }};
  }
  
{% endstyle %}

{% schema %}
{
  "name": "Review Carousel",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "58,934 Verified 5 Star Reviews From Our Customers"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background",
      "default": "#F8F9FB"
    },
    {
      "type": "color",
      "id": "block_bg",
      "label": "Block Background",
      "default": "#ffffff"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "Daniel Jon Orozco"
        },
        {
          "type": "text",
          "id": "review_title",
          "label": "Review Title",
          "default": "Review Title"
        },
        {
          "type": "richtext",
          "id": "review_description",
          "label": "Review Description",
          "default": "<p>Review Description</p>"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Add Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Review Carousel",
      "blocks": [
        {
          "type": "review"
        },
        {
          "type": "review"
        },
        {
          "type": "review"
        },
        {
          "type": "review"
        }
      ]
    }
  ]
}
{% endschema %}

