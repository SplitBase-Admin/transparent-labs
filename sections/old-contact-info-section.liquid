    "name": "Contact Info Section",
    "class": "td-legacy",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Contact Us"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Heading Below Content",
        "default": "<p>Questions, comments, concerns? We'd love to hear from you.</p>"
      },
      {
        "type": "text",
        "id": "shipping_policy",
        "label": "Shipping policy text",
        "default": "Shipping policy"
      },
      {
        "type": "url",
        "id": "shipping_policy_url",
        "label": "Shipping policy url",
      },
      {
        "type": "text",
        "id": "refund_policy",
        "label": "Refund policy text",
        "default": "Refund policy"
      },
      {
        "type": "url",
        "id": "refund_policy_url",
        "label": "Refund policy url",
      },
      {
        "type": "color",
        "id": "heading_color",
        "label": "Heading Color",
        "default": "#173446"
      },
      {
        "type": "color",
        "id": "content_color",
        "label": "Content Color",
        "default": "#142835"
      },
      {
        "type": "color",
        "id": "policy_color",
        "label": "Policy Color",
        "default": "#111314"
      }
    ],
    "blocks": [
      {
        "type": "contact_info",
        "name": "Contact Info",
        "limit": 2,
        "settings": [
          {
            "type": "textarea",
            "id": "icon",
            "label": "Icon"
          },
          {
            "type": "text",
            "id": "caption",
            "label": "Caption"
          },
          {
            "type": "text",
            "id": "Number-Email",
            "label": "Number/Email"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "button",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "link_button",
            "label": "Button Link"
          },
          {
            "type": "color",
            "id": "block_background_color",
            "label": "Block Background Color",
            "default": "#F8F9FB"
          },
          {
            "type": "color",
            "id": "caption_color",
            "label": "Caption Color",
            "default": "#142835"
          },
          {
            "type": "color",
            "id": "Number-Email-color",
            "label": "Number-Email Color",
            "default": "#173446"
          },
          {
            "type": "color",
            "id": "button_background_color",
            "label": "Button Background Color",
            "default": "#111314"
          }
        ]
      }
    ],
    "presets": [{
        "name": "Contact Info Section"
    }]
  }
{% endschema %}