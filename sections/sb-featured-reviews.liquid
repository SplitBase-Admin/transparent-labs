      </svg>
      <h2 class="sb-featured-reviews__heading">{{ section.settings.heading }}</h2>
    </div>
  {% endif %}

  <div class="sb-featured-reviews__slider">
    {% liquid
      if section.blocks.size > 0
        capture slide_contents
          content_for 'blocks'
        endcapture
        content_for 'block', type: '_slider', id: 'static-slider', children: slide_contents
      else
        render 'sb-no-content', context: 'featured reviews'
      endif
    %}
  </div>
</div>
