        // Helper functions
        function initializeImages(opt1, opt2, feature_image) {
          var media = {{ productn.media | json }};
          var product_title = "{{ productn.title }}";

          if (typeof opt1 !== 'undefined' && typeof opt2 !== 'undefined') {
            processImagesWithTwoOptions(opt1, opt2, feature_image, media);
          } else if (typeof opt1 !== 'undefined' && typeof opt2 === 'undefined') {
            processImagesWithOneOption(opt1, media);
          } else if (typeof opt1 === 'undefined' && typeof opt2 === 'undefined') {
            processImagesWithNoOptions(media);
          }
        }

        function processImagesWithTwoOptions(opt1, opt2, feature_image, media) {
          if (feature_image != null) {
            var htmlString = createThumbnailHtml(feature_image);
            window.productSwiper.appendSlide('<div class="swiper-slide swiper-slide2">' + htmlString + '</div>');
            
            var mainhtmlstring = createMainImageHtml(feature_image);
            window.productSwiper2.appendSlide('<div class="swiper-slide swiper-slide1">' + mainhtmlstring + '</div>');
          }

          for (var i = 0; i < media.length; i++) {
            if (media[i].alt !== null) {
              var text = media[i].alt;
              var text1 = text.split('-');
              
              if ((opt1 === text1[0] && opt2 === text1[1]) || 
                  (opt1 === text && opt2 !== text1[1]) || 
                  text1[0] === 'all') {
                addImageToSwiper(media[i].src);
              }
            }
          }
        }

        function processImagesWithOneOption(opt1, media) {
          for (var i = 0; i < media.length; i++) {
            if (media[i].alt !== null) {
              var text = media[i].alt;
              var text1 = text.split('-');
              
              if (opt1 === text || text1[0] === 'all') {
                addImageToSwiper(media[i].src);
              }
            }
          }
        }

        function processImagesWithNoOptions(media) {
          for (var i = 0; i < media.length; i++) {
            if (media[i].alt !== null) {
              var text = media[i].alt;
              var text1 = text.split('-');
              
              if (text1[0] === 'all') {
                addImageToSwiper(media[i].src);
              }
            } else {
              addImageToSwiper(media[i].src);
            }
          }
        }

        function createThumbnailHtml(imageSrc) {
          return '<div class="h-36 xt-thumb object-contain w-36">' +
                 '<lazy-image>' +
                 '<div class="relative">' +
                 '<img class="relative z-0 h-36 object-contain opacity-0" data-placeholder="" height="1200" loading="lazy" src="' + imageSrc + '" width="1200">' +
                 '<img class="absolute h-full inset-0 opacity-100 transition-opacity w-full z-10 h-36 object-contain" data-src="' + imageSrc + '" loading="lazy" src="' + imageSrc + '">' +
                 '</div>' +
                 '</lazy-image>' +
                 '</div>';
        }

        function createMainImageHtml(imageSrc) {
          return '<lazy-image>' +
                 '<div class="relative">' +
                 '<img class="relative z-0 max-h-[300px] object-contain lg:max-h-[600px] opacity-0" data-placeholder="" height="960" loading="lazy" src="' + imageSrc + '" width="960">' +
                 '<img class="absolute h-full inset-0 opacity-100 transition-opacity w-full z-10 max-h-[300px] object-contain lg:max-h-[600px]" data-src="' + imageSrc + '" loading="lazy" src="' + imageSrc + '">' +
                 '</div>' +
                 '</lazy-image>';
        }

        function addImageToSwiper(imageSrc) {
          var htmlString = createThumbnailHtml(imageSrc);
          window.productSwiper.appendSlide('<div class="swiper-slide swiper-slide2">' + htmlString + '</div>');
          
          var mainhtmlstring = createMainImageHtml(imageSrc);
          window.productSwiper2.appendSlide('<div class="swiper-slide swiper-slide1">' + mainhtmlstring + '</div>');
        }

        function updateVariantPricing(current_variant_id) {
          const sellingPlanElements = document.querySelectorAll(".p1_selling_plan [data-stack]");
          sellingPlanElements.forEach(function(Data, i) {
            var vid = parseInt(Data.dataset.stack);
            if (vid == current_variant_id) {
              var otpprice = Data.dataset.otp;
              var new_price = Data.dataset.price;
              var oldprice = otpprice.split("$");
              var discounted_price = new_price.split("$");
              var save_price = parseFloat(oldprice[1]) - parseFloat(discounted_price[1]);

              const savePriceTextElements = document.querySelectorAll('.save_price_text');
              const onetimePriceElements = document.querySelectorAll('.onetimeprice');
              const subPriceElements = document.querySelectorAll('.sub_price');
              const savePriceElements = document.querySelectorAll('.save_price');
              
              savePriceTextElements.forEach(el => el.textContent = "save $" + save_price.toFixed());
              onetimePriceElements.forEach(el => el.textContent = otpprice);
              subPriceElements.forEach(el => el.innerHTML = new_price + "<br><span class='line_thue'>" + otpprice + "</span>");
              savePriceElements.forEach(el => el.textContent = "& save $" + save_price.toFixed() + " + Free Shipping");
            }
          });
        }
      });
    </script>
  </div>
