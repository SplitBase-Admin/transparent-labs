        document.querySelectorAll('input[type=radio][name=newpurchaseoption]').forEach(radio => {
          radio.addEventListener('change', function() {
            // Hide all take_price_ss elements
            document.querySelectorAll(".take_price_ss").forEach(el => {
              el.classList.add('sb-slide-up');
              el.classList.remove('sb-slide-down');
            });
            
            // Show the sibling take_price_ss element
            const sibling = this.parentNode.querySelector(".take_price_ss");
            if (sibling) {
              sibling.classList.remove('sb-slide-up');
              sibling.classList.add('sb-slide-down');
            }

            const checkedOption = document.querySelector("input[name='newpurchaseoption']:checked");
            var selling_plan_val = checkedOption ? checkedOption.value : '';
            const currentVariantInput = document.querySelector("input[name='id']");
            var current_variant_id = currentVariantInput ? currentVariantInput.value : '';

            const productAvailability = document.getElementById("product-availability");
            if (selling_plan_val == "onetime") {
              if (productAvailability) productAvailability.textContent = "Add To Cart";
              updateVariantPricing(current_variant_id);
            } else {
              if (productAvailability) productAvailability.textContent = "Subscribe";
              updateVariantPricing(current_variant_id);
            }
            
            const variantSelect = document.querySelector('select[name="id"], input[name="id"]');
            if (variantSelect) variantSelect.dispatchEvent(new Event('change'));
          });
        });

        // Handle Add To Cart button click
        const addToCartButton = document.getElementById("add-to-cart-button");
        if (addToCartButton) {
          addToCartButton.addEventListener("click", function() {
            const checkedOption = document.querySelector("input[name='newpurchaseoption']:checked");
            var selling_plan_val = checkedOption ? checkedOption.value : '';
            var data;
            var url = '/cart/add.js';
            var cart = document.querySelector('cart-notification') || document.querySelector('cart-drawer');
            
            if (cart) {
              url += `?sections=${cart.getSectionsToRender().map((section) => section.id)}`;
            }

            const stackVid = document.querySelector('.stack_vid');
            const quantityInput = document.querySelector("input[name='quantity']");
            const checkedSellingPlan = document.querySelector('input[name="pro_selling_plan"]:checked');

            if (selling_plan_val == "subsave") {
              data = {
                id: stackVid ? parseInt(stackVid.value) : 0,
                quantity: quantityInput ? quantityInput.value : 1,
                selling_plan: checkedSellingPlan ? parseInt(checkedSellingPlan.value) : 0
              };
            } else {
              data = {
                id: stackVid ? parseInt(stackVid.value) : 0,
                quantity: quantityInput ? quantityInput.value : 1
              };
            }

            // Fetch API call to Add To Cart
            fetch(url, {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
              },
              body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(response => {
              if (cart) {
                cart.renderContents(response);
                publish(PUB_SUB_EVENTS.cartUpdate, { source: 'xt-protein-product' });
                cart.openCartDrawer();
              } else {
                fetch('/cart.js')
                  .then(response => response.json())
                  .then(cart => {
                    const cartCount = document.getElementById('cart-count');
                    if (cartCount) {
                      if (cart.item_count < 1) {
                        cartCount.innerHTML = "";
                      } else {
                        cartCount.innerHTML = "<number class='number'>" + cart.item_count + "</number>";
                      }
                    }
                  });
                publish(PUB_SUB_EVENTS.cartUpdate, { source: 'xt-protein-product' });
              }
            })
            .catch(error => {
              console.error('Add To Cart failed:', error);
            });
          });
        }

        // Initialize pricing based on current selection
        const checkedOption = document.querySelector("input[name='newpurchaseoption']:checked");
        var selling_plan_val = checkedOption ? checkedOption.value : '';
        const currentVariantInput = document.querySelector("input[name='id']");
        var current_variant_id = currentVariantInput ? currentVariantInput.value : '';
        
        if (selling_plan_val == "onetime") {
          //console.log('Initializing one-time purchase pricing');
          updateVariantPricing(current_variant_id);
        } else {
          //console.log("Initializing subscription pricing");
          updateVariantPricing(current_variant_id);
        }

        // Click handlers for navigation links
        document.querySelectorAll('.open-ingradiant-details').forEach(link => {
