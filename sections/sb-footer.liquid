                    <path d="M6 8.66589L8.25 10.9159L12.75 6.41589" stroke="black" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                  </mask>
                  <g mask="url(#mask0_200_1504)">
                    <path d="M0 -0.334106H18V17.6659H0V-0.334106Z" fill="#28EBA7"/>
                  </g>
                </svg>
                <span class="sb-footer__newsletter-form__message-text sb-footer__newsletter-form__message--success"
                  >Thank you for subscribing!</span
                >
              </div>
            {%- endif -%}

            {%- if form.errors -%}
              <div class="sb-footer__newsletter-form__message sb-footer__newsletter-form__message--error">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M8 0.434448C12.1423 0.434448 15.5 3.7922 15.5 7.93445C15.5 12.0767 12.1423 15.4344 8 15.4344C3.85775 15.4344 0.5 12.0767 0.5 7.93445C0.5 3.7922 3.85775 0.434448 8 0.434448ZM8 10.1844C7.80109 10.1844 7.61032 10.2635 7.46967 10.4041C7.32902 10.5448 7.25 10.7355 7.25 10.9344C7.25 11.1334 7.32902 11.3241 7.46967 11.4648C7.61032 11.6054 7.80109 11.6844 8 11.6844C8.19891 11.6844 8.38968 11.6054 8.53033 11.4648C8.67098 11.3241 8.75 11.1334 8.75 10.9344C8.75 10.7355 8.67098 10.5448 8.53033 10.4041C8.38968 10.2635 8.19891 10.1844 8 10.1844ZM8 3.43445C7.8163 3.43447 7.639 3.50192 7.50172 3.62398C7.36444 3.74605 7.27674 3.91426 7.25525 4.0967L7.25 4.18445V8.68445C7.25021 8.87561 7.32341 9.05947 7.45464 9.19847C7.58586 9.33748 7.76521 9.42112 7.95605 9.43233C8.14688 9.44353 8.33478 9.38144 8.48137 9.25875C8.62796 9.13606 8.72217 8.96202 8.74475 8.7722L8.75 8.68445V4.18445C8.75 3.98554 8.67098 3.79477 8.53033 3.65412C8.38968 3.51347 8.19891 3.43445 8 3.43445Z" fill="currentColor"/>
                </svg>
                <span class="sb-footer__newsletter-form__message-text sb-footer__newsletter-form__message--error"
                  >Error with submission. Please try again.</span
                >
              </div>
            {%- endif -%}
            <button class="sb-footer__button" type="submit">{{ section.settings.newsletter_button_text }}</button>
          {% endform %}
        </email-signup-form>
      </div>
    </div>
    <div class="sb-footer__bottom">
      {% render 'social-icons' class: 'sb-elx-social' %}

      <div class="sb-footer__contact">
        {% if section.settings.contact_email %}
          <span class="sb-footer__contact-email">
            <a href="mailto:{{ section.settings.contact_email }}">{{ section.settings.contact_email }}</a>
          </span>
        {% endif %}
        {% if section.settings.contact_phone %}
          <span class="sb-footer__contact-phone">
            <a href="tel:{{ section.settings.contact_phone | remove: ' ' | remove: '(' | remove: ')' | remove: '-' }}">
              {{- section.settings.contact_phone -}}
            </a>
          </span>
        {% endif %}
      </div>
      <div class="sb-footer__address">{{ section.settings.address }}</div>
      <div class="sb-footer__disclaimer">{{ section.settings.disclaimer }}</div>
      <div class="sb-footer__copyright">{{ section.settings.copyright }}</div>
    </div>
  </div>
</section>

<!-- Ensure sb-accordion.js is loaded for accordion functionality -->
