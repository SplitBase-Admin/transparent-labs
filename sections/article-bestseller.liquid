
 <style>
  .TL_ProductCards_Container {
    display:flex;
    justify-content:space-between;
    margin:0 auto;
    position:relative;
    padding-top:32px;
    padding-bottom:32px;
    flex-wrap: nowrap;
/*     overflow-x: scroll; */
  }

  .TL_ProductCards {
    background: #ffffff;
    box-shadow: 0px 0px 6px #00000010;
    min-height: 200px;
    min-width: 260px;
    max-width: 23%;
    border-radius: 4px;
/*     padding: 16px; */
    position: relative;
    display: flex;
    flex-direction: column;
  }

  .TL_ProductCards img {
    width: 200px;
    margin:0 auto;
  }

  .TL_ProductCard_Tags {
    background:rgb(19 40 54);
    color:#ffffff;
    font-size:11px;
    padding:4px;
    position:absolute;
    right:0px;
    top:0px;
    border-radius: 0px 0px 0px 2px;
  }

  .TL_ProductCards_title {
	  font-size:16px;
	  line-height:1.2em;
	  margin: 8px 0px;
	  min-height:3.6em;
  }

  .TL_ATC_Button {
    background: rgb(65 181 232);
    border:0px;
    width:100%;
    height:40px;
    border-radius:4px;
    color:#ffffff;
    font-size:14px;
    line-height:1em;
  }

  .TL_ALT_Button {
    background: #ffffff;
    border:2px solid rgb(65 181 232);
    width:100%;
    height:40px;
    border-radius:4px;
    color:rgb(65 181 232);
    font-size:14px;
    line-height:1em;
    margin-top:8px;
  }

  .TL_ALT_Button:hover, .TL_ATC_Button:hover {
    cursor:pointer;
  }

  .TL_ProductDetails {
    display:flex;
    justify-content:space-between;
    align-items: center;
    max-height:25px;
  }
.TL_BlogPost_product{max-width:1480px;	margin: 0 auto;}
  @media only screen and (max-width: 1024px) {
    .TL_ProductCards {
      margin-right:24px;
    }
  }

  .index-test-products {
    background: rgb(247 249 252);
    margin-top: -16px !important;
  }
   
   .a_dropdown{
       background: #ffffff;
    border: 2px solid rgb(65 181 232);
    width: 100%;
    height: 40px;
    border-radius: 4px;
    color: rgb(65 181 232);
    font-size: 14px;
    line-height: 1em;
    margin-top: 8px;
   margin-bottom: 8px;}

   @media (min-width: 1024px){}
    .lg\:max-w-7xl {   max-width: 90rem;}
   }
</style>

{% if section.settings.show_collection %}
<div class="font-neue pb-12 px-4 mt-4 lg:max-w-7xl lg:mx-auto">
  <h2 class="font-bold text-blue-500 text-xl md:border-l-8 md:border-blue-500 md:pl-2 md:text-2xl">
   {% if section.settings.heading != blank %}
    {{section.settings.heading}}
    {% else %}
    SHOP BESTSELLERS
    {% endif %}
  </h2>
{% assign collection_handle = section.settings.collection %}
  {% assign striped_collection = collection_handle | strip %}
  <div class="TL_ProductCards_Container product_slider">
    {% for product in collections[striped_collection].products limit: 4 %}
      <div class="TL_ProductCards 3">
          {% render 'product-card' product: product %}
      </div>
    {% endfor %}
  </div>
</div>
{% endif %}

{% if section.settings.show_product %}
<div class="font-neue TL_BlogPost_product">
  <h2 class="font-bold text-blue-500 text-xl md:border-l-8 md:border-blue-500 md:pl-2 md:text-2xl">
   {% if section.settings.heading != blank %}
    {{section.settings.heading}}
    {% else %}
    SHOP BESTSELLERS
    {% endif %}
  </h2>
   <div class="TL_ProductCards_Container product_slider">
	{% if section.settings.product_1 != blank %}
		{% assign product = section.settings.product_1 %}
     <div class="article-col-3">
         {% render 'product-card' product: product %}
      </div>
	{% endif %}

	{% if section.settings.product_2 != blank %}
     {% assign product = section.settings.product_2 %}
		<div class="article-col-3">
           {% render 'product-card' product: product %}
      </div>
	{% endif %}

	{% if section.settings.product_3 != blank %}
     {% assign product = section.settings.product_3 %}
		<div class="article-col-3">
           {% render 'product-card' product: product %}
      </div>
	{% endif %}

	{% if section.settings.product_4 != blank %}
     {% assign product = section.settings.product_4 %}
		<div class="article-col-3 0">
          {% render 'product-card' product: product %}
      </div>
	{% endif %}

</div>
</div>
{% endif %}

{% schema %}


{
  "name": "article bestseller",
  "class": "article-bestseller",
  "settings": [
	{
      "type": "checkbox",
      "id": "show_collection",
      "default": false,
      "label": "Enable to show featured collection"
    },
    {
      	"type": "text",
		"id": "heading",
      	"label": "Heading",
      	"default": "Featured product"
    },
	{
      	"type": "collection",
		"id": "collection",
      	"label": "Choose collection"
    },
	{
      	"type": "text",
		"id": "buttontext",
      	"label": "Button text"
    },
	{
      	"type": "text",
		"id": "buttontext2",
      	"label": "Second button text "
    },
	{
		"type":"header",
		"content":"Featured Products"	
	},
	{
      "type": "checkbox",
      "id": "show_product",
      "default": false,
      "label": "Enable to show featured Products"
    },
	{
      	"type": "product",
		"id": "product_1",
      	"label": "Choose product"
    },
{
      	"type": "product",
		"id": "product_2",
      	"label": "Choose product"
    },
{
      	"type": "product",
		"id": "product_3",
      	"label": "Choose product"
    },
{
      	"type": "product",
		"id": "product_4",
      	"label": "Choose product"
    }

  ],
  "presets": [{
    "name": "article bestseller"
  }]
}
{% endschema %}


<script>
  $(".product_slider").slick({
    dots: false,
    infinite: false,
    slidesToShow: 4,
    slidesToScroll: 1,
    arrows:true,
    prevArrow:"<button class='slick-prev slick-arrow' aria-label='Previous' type='button'><img src='https://cdn.shopify.com/s/files/1/0866/7664/files/chevron_right.png?v=1660762411'></button>",
    nextArrow:"<button class='slick-next slick-arrow' aria-label='Previous' type='button'><img src='https://cdn.shopify.com/s/files/1/0866/7664/files/chevron_right.png?v=1660762411'></button>",
    responsive:[
      {
            breakpoint: 1366,
            settings: {
                slidesToShow: 3
            }
        },
        {
            breakpoint: 1023,
            settings: {
                slidesToShow: 2
            }
        },
        {
            breakpoint: 767,
            settings: {
                slidesToShow: 1,
                arrows:false,
                centerMode:true
            }
        }
    ]
  });
</script>
