{%  stylesheet %}
  .sb-fitness-calculators {
    background: var(--sb-bg-color, #f8f9fb);
    padding-top: var(--sb-padding-top, 40px);
    padding-bottom: var(--sb-padding-bottom, 40px);
  }
  
  .sb-fitness-calculators__container {
    padding-left: 16px;
    padding-right: 16px;
  }
  
  .sb-fitness-calculators__content {
    margin-bottom: 32px;
  }
  
  .sb-fitness-calculators__heading {
    font-family: var(--sb-font-family-heading);
    font-size: 28px;
    line-height: 1.2;
    color: var(--sb-fg-color, #111314);
    margin: 0;
  }
  
  .sb-fitness-calculators__cards {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }
  
  @media screen and (min-width: 1024px) {
  
    .sb-fitness-calculators__content {
      margin-bottom: 48px;
    }
    
    .sb-fitness-calculators__heading {
      font-size: 40px;
    }
    
    .sb-fitness-calculators__cards {
      flex-direction: row;
      gap: 24px;
      align-items: flex-start;
    }
  }
{% endstylesheet %}
<div class="sb-fitness-calculators sb-styled-element" style="{%  render 'style-attributes', settings: section.settings %}">
  <div class="sb-page-width sb-fitness-calculators__container">
    <div class="sb-fitness-calculators__content">
    {% if section.settings.heading != blank %}
      <h2 class="sb-fitness-calculators__heading">{{ section.settings.heading }}</h2>
    {% endif %}
  </div>
  {% if section.blocks.size > 0 %}
    <div class="sb-fitness-calculators__cards">
      {% for block in section.blocks %}
        {% render 'goal-card', settings: block.settings %}
      {% endfor %}
    </div>
  {% endif %}
  </div>
  
</div>
