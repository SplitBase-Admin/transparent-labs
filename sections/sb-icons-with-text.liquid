<div class="sb-icons-with-text">
  {% for block in section.blocks %}
    <div class="sb-icons-with-text__item">
      {% if block.settings.icon != blank %}
        <div class="sb-icons-with-text__icon-wrap">
          {{ block.settings.icon | image_url: width: 50 | image_tag: alt: block.settings.icon.alt, loading: 'lazy', class: 'sb-icons-with-text__icon' }}
        </div>
      {% endif %}
      {% if block.settings.text != blank %}
        <span class="sb-icons-with-text__text">{{ block.settings.text }}</span>
      {% endif %}
    </div>
  {% endfor %}
</div>

{% stylesheet %}
  .sb-icons-with-text {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    display: flex;
    --column-count: 2;
    --inline-gap: 20px;
    --gap-count: calc(var(--column-count) - 1);
    gap: 20px var(--inline-gap);
    flex-wrap: wrap;
    justify-content: center;
    background-color: var(--sb-bg-color, #F8F9FB);
    padding: 20px;
    align-items: flex-start;
  }
  .sb-icons-with-text__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 12px;
    width: calc((100% - var(--inline-gap, 12px) * var(--gap-count, 1)) / var(--column-count, 2));
  }
  .sb-icons-with-text__icon {
    width: 32px;
    height: 32px;
    object-fit: contain;
  }
  .sb-icons-with-text__text {
    font-size: calc(16 / var(--sb-base-font-size, 16) * 1rem);
    line-height: 1.5;
    font-family: var(--sb-font-family-body);
    font-weight: 400;
    color: var(--sb-fg-color, #111314);
    text-align: center;
  }
  .sb-icons-with-text__icon-wrap {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    background-color: #f5f5f5;
  }
  @media screen and (min-width: 1024px){
    .sb-icons-with-text {
      justify-content: space-around;
    }
    .sb-icons-with-text__item {
      flex-direction: row;
      width: fit-content;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Sb Icons With Text",
  "tag": "section",
  "settings": [
  ],
  "blocks": [
    {
      "name": "Icon with text",
      "type": "icon-with-text",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sb Icons With Text"
    }
  ]
}
{% endschema %}