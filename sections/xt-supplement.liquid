<div class="xt-supplement">
  <div class="wrapper">
    {% if section.settings.heading!=blank %}
      <h2 class="heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="wraper">
      {% for block in section.blocks %}
        <a class="items" {% if block.settings.link!=blank %}href="{{ block.settings.link }}"{% endif %}>
          {% if block.settings.image!=blank %}
            <div class="img">
              {% assign image_alt = block.settings.icon | split: '/' | last | split: '.' | first | replace: '/', ' ' | replace: '-', ' ' | replace: '_', ' ' %}
              <img src="{{ block.settings.image | image_url }}" width="" height="" alt="{% if block.settings.image.alt %}{{ block.settings.image.alt }}{% else %}{{ image_alt }}{% endif %}" loading="lazy">
            </div>
            {% if block.settings.title!=blank %}
              <div class="title">{{ block.settings.title }}</div>
            {% endif %}
          {% endif %}
          
        </a>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Supplement",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "block",
        "limit": 3,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Supplement"
      }
    ]
  }
{% endschema %}