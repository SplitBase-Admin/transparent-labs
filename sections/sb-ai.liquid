{{ 'section-sb-ai.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #shopify-section-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }}; 
  }
  
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    --block-gap: {{ section.settings.block_gap | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 990px) {
    #shopify-section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      --block-gap: {{ section.settings.block_gap }}px;
    }
  }
{%- endstyle -%}


<section class="sb-section">
  <div class="{% unless section.settings.page_layout == 'full-width' %}sb-section-page-width {% unless section.settings.page_layout == 'normal' %} sb-section-page-width-{{ section.settings.page_layout }}{% endunless %}{% endunless %}">
    {% content_for 'blocks' %}
  </div>
</section>

{% schema %}
{
  "name": "SB AI blocks",
  "class": "sb-section",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "block_gap",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Space Between Blocks",
      "default": 0
    },
    {
      "type": "select",
      "id": "page_layout",
      "label": "Layout",
      "default": "slim",
      "options": [
        {
          "value": "full-width",
          "label": "Full width"
        },
        {
          "value": "wide",
          "label": "Wide"
        },
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "narrow",
          "label": "Narrow"
        },
        {
          "value": "slim",
          "label": "Slim"
        }
      ]
    },
    {
      "type": "header",
      "content": "Colors",
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 0
  },
  {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 0
  } 
  ],
  "blocks": [
    {
      "type": "@theme"
    },
    {
      "type": "@app"
    }
  ],
  "presets": [
    {
      "name": "SB AI blocks"
    }
  ]
}
{% endschema %}