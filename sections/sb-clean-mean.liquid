        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content",
          "placeholder": "Enter the clean benefit text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SB What Does Clean Mean",
      "blocks": [
        {
          "type": "item",
          "settings": {
            "content": "No Artificial Sweeteners"
          }
        },
        {
          "type": "item",
