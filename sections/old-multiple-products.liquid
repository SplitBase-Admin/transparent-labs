<div class="xt-multiple-products-section-main" id="{{ section.id }}">

  <div class="font-neue pb-12 px-4 mt-8 lg:max-w-7xl lg:mx-auto">
  {% if section.settings.custom_title != blank %}
  <h2 class="font-bold text-blue-500 text-xl md:border-l-8 md:border-blue-500 md:pl-2 md:text-2xl">
    {{ section.settings.custom_title }}
  </h2>
  {% endif %}

  <div class="multiple-products-inner-main-sec">
    <ul id="product-grid" data-id="template--17324626018397__product-grid" class="gap-8 grid grid-cols-1 mb-8 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 3xl:grid-cols-5 ">
    {% for product in section.settings.products_Select %}
      <li class="">
        {% render 'old-product-card' product: product %}
      </li>
    {% endfor %}
    </ul>
  </div>
</div>


  
</div>







{% schema %}
{
  "name": "Multiple Products",
  "class": "td-legacy",
  "settings": [
    {
      "type": "text",
      "id": "custom_title",
      "label": "Title"
    },
    {
      "type": "product_list",
      "id": "products_Select",
      "label": "Select Products"
    }
  ],
  "presets": [
    {
      "name": "Multiple Products",
      "category": "Custom"
    }
  ]
}
{% endschema %}