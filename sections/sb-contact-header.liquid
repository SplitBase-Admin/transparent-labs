{%  stylesheet %}
  .sb-contact-header {
    padding-top: var(--sb-padding-top);
    padding-bottom: var(--sb-padding-bottom);
    color: var(--sb-fg-color);
    background: var(--sb-bg-color);
  }

  .sb-contact-header__content {
    max-width: 928px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 32px;
    align-items: center;
  }

  .sb-contact-header__header {
    display: flex;
    flex-direction: column;
    gap: 24px;
    width: 100%;
  }

  .sb-contact-header__title {
    font-family: var(--sb-font-family-heading);
    font-size: 32px;
    line-height: 1.2;
    color: var(--sb-fg-color);
    margin: 0;
  }

  .sb-contact-header__description {
    font-family: var(--sb-font-family-body);
    font-weight: 400;
    font-size: 16px;
    line-height: 1.4;
    margin: 0;
  }

  .sb-contact-header__contact-cards {
    display: flex;
    gap: 16px;
    align-items: flex-start;
    justify-content: center;
    width: 100%;
    flex-direction: row;
    flex-wrap: wrap;
  }

  .sb-contact-header__contact-info {
    display: flex;
    flex-direction: column;
    gap: 16px;
    align-items: center;
  }

  .sb-contact-header__contact-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  .sb-contact-header__contact-icon img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .sb-contact-header__contact-icon svg {
    width: 100%;
    height: 100%;
    stroke: var(--sb-acc-color);
  }

  .sb-contact-header__contact-text {
    font-family: var(--sb-font-family-body);
    font-weight: 400;
    font-size: 16px;
    line-height: 1.4;
    color: #142835;
    margin: 0;
  }

  .sb-contact-header__contact-details {
    font-family: var(--sb-font-family-body);
    font-weight: 400;
    font-size: 16px;
    line-height: 1.4;
    color: var(--sb-fg-color);
    margin: 0;
  }

  .sb-contact-header__contact-button {
    background: var(--sb-acc-color);
    border: none;
    border-radius: 24px;
    padding: 6px 16px 8px 16px;
    display: flex;
    align-items: center;
    gap: 3px;
    cursor: pointer;
    transition: opacity 0.3s ease;
    text-decoration: none;
  }

  .sb-contact-header__contact-button:hover {
    opacity: 0.9;
  }

  .sb-contact-header__contact-button--green {
    background: #10B981;
  }

  .sb-contact-header__contact-button-text {
    font-family: var(--sb-font-family-body);
    font-weight: 400;
    font-size: 16px;
    line-height: 1.4;
    color: #F8F9FB;
  }

  .sb-contact-header__links {
    display: flex;
    flex-direction: column;
    max-width: 542px;
    width: 100%;
  }

  .sb-contact-header__link-item {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .sb-contact-header__link-divider {
    width: 100%;
    height: 1px;
    background: rgba(17, 19, 20, 0.3);
  }

  .sb-contact-header__link {
    display: flex;
    align-items: center;
    justify-content: space-between;
    text-decoration: none;
    padding: 12px 0;
  }

  .sb-contact-header__link-text {
    font-family: var(--sb-font-family-body);
    font-weight: 400;
    font-size: 18px;
    line-height: 1.4;
    color: var(--sb-acc-color);
  }

  .sb-contact-header__link-icon {
    width: 18px;
    height: 18px;
    transform: rotate(90deg);
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .sb-contact-header__header {
      text-align: center;
    }

    .sb-contact-header__content {
      gap: 64px
    }

    .sb-contact-header__title {
      font-size: 40px;
    }
  }

  @media (min-width: 1024px) {
    .sb-contact-header__contact-cards {
      gap: 48px;
    }
  }

{% endstylesheet %}

<div class="sb-contact-header sb-styled-element" style="{%  render 'style-attributes', settings: section.settings %}">
  <div class="sb-contact-header__container sb-page-width">
    <div class="sb-contact-header__content">
      <div class="sb-contact-header__header">
        {% if section.settings.heading != blank %}
          <h1 class="sb-contact-header__title">{{ section.settings.heading }}</h1>
        {% endif %}

        {% if section.settings.richtext_content != blank %}
          <div class="sb-contact-header__description">
            {{ section.settings.richtext_content | strip_html }}
          </div>
        {% endif %}
      </div>

      {% assign contact_blocks = section.blocks | where: 'type', 'contact_card' %}
      {% if contact_blocks.size > 0 %}
        <div class="sb-contact-header__contact-cards">
          {% for block in contact_blocks %}
            {% render '_contact-card', block: block %}
          {% endfor %}
        </div>
      {% endif %}

      {% assign link_blocks = section.blocks | where: 'type', 'contact_link' %}
      {% if link_blocks.size > 0 %}
        <div class="sb-contact-header__links">
          {% for block in link_blocks %}
            {% render '_contact-link', block: block %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

