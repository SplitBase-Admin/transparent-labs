{% assign modal_id = 'sb-modal-' |  append: section.id %}
<div class="sb-styled-element" style="{%  render 'style-attributes', settings: section.settings %}">
  <div class="sb-third-party-testing__content sb-page-width">
    <div class="sb-third-party-testing__main">
      <div class="sb-third-party-testing__header">
        {% if section.settings.heading != blank %}
          <h1 class="sb-third-party-testing__title">{{ section.settings.heading }}</h1>
        {% endif %}

        {% if section.settings.richtext_content != blank %}
          <div class="sb-third-party-testing__description">
            {{ section.settings.richtext_content | strip_html }}
          </div>
        {% endif %}

        {% if section.settings.tooltip != blank %}
          <div class="sb-third-party-testing__learn-more">
            {% render 'sb-tooltip', 
              trigger_text: 'Learn More',
              content: section.settings.tooltip,
              trigger_class: 'sb-third-party-testing__learn-more-link',
              icon_class: 'sb-third-party-testing__info-icon' %}
          </div>
        {% endif %}
      </div>

      <sb-product-search class="sb-third-party-testing__search-section" data-modal-id="{{ modal_id }}">
        <div class="sb-third-party-testing__search-form">
          <div class="sb-third-party-testing__search-input-wrapper">
            <input 
              type="text" 
              class="sb-third-party-testing__search-input" 
              placeholder="Enter Product Name"
              data-search-input
            >
            <div class="sb-third-party-testing__search-results" data-search-results></div>
          </div>
          {% comment %} {% assign button_color = section.settings.ch_fg_color | default: '#000'   %}
          {% assign button_text_color = section.settings.ch_bg_color | default: '#fff' %} {% endcomment %}
          {% comment %} {% assign button = null | default: button_text:"Search", button_url:'#', button_color: button_color, button_text_color: button_text_color, button_type: 'button' %} {% endcomment %}
          {% comment %} {% render 'sb-button', button: button, additional_attributes: 'data-search-button', style: 'small' %} {% endcomment %}
        </div>

        {% if section.settings.keep_shopping_text != blank and section.settings.keep_shopping_url != blank %}
          <div class="sb-third-party-testing__keep-shopping--mobile">
            {% render 'sb-button', button_type: 'link', button_text: section.settings.keep_shopping_text, button_url: section.settings.keep_shopping_url%}
          </div>
        {% endif %}
      </sb-product-search>

      <div class="sb-third-party-testing__recent-section" data-recent-section>
        <h2 class="sb-third-party-testing__recent-title sb-third-party-testing__recent-title--hidden" data-recent-title>Most Recent Search</h2>
        <div class="sb-third-party-testing__recent-product" data-recent-product>
          <div class="sb-third-party-testing__recent-content" data-recent-content></div>
        </div>
      </div>

      {% if section.settings.keep_shopping_text != blank and section.settings.keep_shopping_url != blank %}
        <div class="sb-third-party-testing__keep-shopping--desktop">
          {% render 'sb-button', button_type: 'link', button_text: section.settings.keep_shopping_text, button_url: section.settings.keep_shopping_url %}
        </div>
      {% endif %}

      <!-- HTML Template for Recent Product -->
      <template id="recent-product-template">
        <a href="#" class="sb-third-party-testing__recent-content-link" data-content-link>
          <div class="sb-third-party-testing__recent-content">
            <div class="sb-third-party-testing__recent-image" data-image></div>
            <div class="sb-third-party-testing__recent-info">
              <h3 class="sb-third-party-testing__recent-product-title" data-title></h3>
              <p class="sb-third-party-testing__recent-description" data-description></p>
              <button type="button" class="sb-third-party-testing__recent-cta" data-cta-button>
                <span>View Product</span>
                <div class="sb-button__arrow">
                  {% render 'sb-icon--right-arrow' %}
                </div>
              </button>
            </div>
          </div>
        </a>
      </template>
    </div>

    <div class="sb-third-party-testing__sidebar">
      <div class="sb-third-party-testing__search-history" data-search-history-section>
        <h2 class="sb-third-party-testing__search-history-title">Search History</h2>
        <div class="sb-third-party-testing__search-history-list" data-search-history-list>
          <!-- Search history items will be populated dynamically -->
        </div>
      </div>
    </div>
  </div>
