  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const params = new URLSearchParams(window.location.search);
      const productQuery = params.get("products");
      if (!productQuery) return;

      // Get product handles from query
      const visibleHandles = productQuery.split(/[ +]/).map(h => h.trim()).filter(Boolean);

      const grid = document.querySelector('#product-grid');
      if (!grid) return;

      const allItems = Array.from(grid.querySelectorAll('.product-grid-item[product-handle]'));

      // Clear grid content
      grid.innerHTML = '';

      // Append only visible items, in order of URL
      visibleHandles.forEach(handle => {
        const match = allItems.find(item => item.getAttribute('product-handle') === handle);
        if (match) {
          match.style.display = ''; // ensure it's visible
          grid.appendChild(match);  // append in new order
        }
      });
    });
  </script>
{% endif %}


