<div class="bg-gray-300 pb-12 pt-8 px-4 md:hidden">
  <div class="flex items-center">
    <h2 class="font-bold text-blue-500 text-xl md:border-l-8 md:border-blue-500 md:pl-2 md:text-2xl">
      OUR PROMISE
    </h2>

    <h3 class="font-semibold text-gray-500 ml-4">
      Full Transparency
    </h3>
  </div>

  <div class="bg-white mt-4 rounded-lg shadow-md">
    <div class="promise-swiper swiper">
      <div class="swiper-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'promise' %}
            <div class="swiper-slide">
              <div class="p-4 pb-8 text-center">
                <div class="h-12 inline-block responsive-svg-wrapper w-12">
                  {{ block.settings.icon }}
                </div>

                <p class="mt-2 text-sm">{{ block.settings.label }}</p>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="absolute bottom-2 left-1/2 -translate-x-1/2 z-10">
        <div class="promise-swiper__pagination"></div>
      </div>
    </div>
  </div>
</div>

<div class="bg-gray-300 hidden pt-8 md:block">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <div class="bg-white hidden px-8 py-8 rounded-lg shadow-md md:block">
      <div class="flex items-center mb-8">
        <h2 class="font-bold text-blue-500 text-xl md:text-2xl">
          OUR PROMISE
        </h2>

        <h3 class="font-semibold text-gray-500 ml-4">
          Full Transparency
        </h3>
      </div>

      <div class="grid grid-cols-3">
        {% for block in section.blocks %}
          {% if block.type == 'promise' %}
            <div class="text-center">
              <div class="h-20 inline-block responsive-svg-wrapper w-20">
                {{ block.settings.icon }}
              </div>

              <p class="mt-2 text-sm">{{ block.settings.label }}</p>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
