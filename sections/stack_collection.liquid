<div class="flex xgen-new-collection" id="xgen-new-collection">
  <div class="flex-1">
    <div  class="pt-4">
          <div class="xgen-tagging">
            {% if section.settings.title != blank %}
            	<h2>{{ section.settings.title}}</h2>
            {% endif %}
            
            {% if section.settings.subtitle != blank %}
            	<p>{{ section.settings.subtitle}}</p>
            {% endif %}
            
            <div class="tagging-grid xgenstack-tab">
              <ul id="tabs-nav">
              {% for block in section.blocks %}
              	{% if forloop.first == true %}
                <li><a   href="#tab_{{forloop.index}}" class="tablinks active" id="protab_{{ forloop.index }}" >{{block.settings.collection_type}}</a></li>
    			{% else %}
                <li><a href="#tab_{{forloop.index}}" class="tablinks" id="protab_{{ forloop.index }}">{{block.settings.collection_type}}</a></li>
  				{% endif %}
              {% endfor %}
              </ul>
            </div>
          </div>
      
      <!--static tagging -->
      
      
      {% for block in section.blocks %}
      	<div id="tab_{{forloop.index}}" class="xgenstack-tabcontent tab-content">
          <div class="gap-8 grid grid-cols-1 mb-8 sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-3">
		  {% assign product_1 = block.settings.product_1 %}
          {% assign product_2 = block.settings.product_2 %}
          {% assign product_3 = block.settings.product_3 %}
          {% assign product_4 = block.settings.product_4 %}
          {% assign product_5 = block.settings.product_5 %}
          {% assign product_6 = block.settings.product_6 %}
          {% assign product_7 = block.settings.product_7 %}
          {% assign product_8 = block.settings.product_8 %}
            
          
            {% assign p_type1 = block.settings.product_type %}
            {% assign p_type2= block.settings.product_type_1 %}
            {% assign p_type3 = block.settings.product_type_2 %}
            {% assign p_type4 = block.settings.product_type_3 %}
            {% assign p_type5 = block.settings.product_type_4 %}
            {% assign p_type6 = block.settings.product_type_5 %}
            {% assign p_type7 = block.settings.product_type_6 %}
            {% assign p_type8 = block.settings.product_type_7 %}
            
            
           {% assign discount_text1 = section.settings.discount_month %}
           {% assign discount_text2 = section.settings.discount_days %}
            {% assign percent_text =  section.settings.percent_text %}
          
          {% if product_1 != blank %}
            {% render 'stack-product-grid' with product: product_1, block_id: block.id, product_type: p_type1, dis_text_month: discount_text1, dis_text_days: discount_text2, sub_percent_text: percent_text %}
          {% endif %}
          {% if product_2 != blank %}
          	{% render 'stack-product-grid' with product: product_2, block_id: block.id, product_type: p_type2, dis_text_month: discount_text1, dis_text_days: discount_text2, sub_percent_text: percent_text  %}
          {% endif %}
          {% if product_3 != blank %}
          	{% render 'stack-product-grid' with product: product_3, block_id: block.id, product_type: p_type3, dis_text_month: discount_text1, dis_text_days: discount_text2, sub_percent_text: percent_text   %}
          {% endif %}
          {% if product_4 != blank %}
          	{% render 'stack-product-grid' with product: product_4, block_id: block.id, product_type: p_type4, dis_text_month: discount_text1, dis_text_days: discount_text2, sub_percent_text: percent_text   %}
          {% endif %}
          {% if product_5 != blank %}
          	{% render 'stack-product-grid' with product: product_5, block_id: block.id, product_type: p_type5, dis_text_month: discount_text1, dis_text_days: discount_text2, sub_percent_text: percent_text   %}
          {% endif %}
          {% if product_6 != blank %}
          	{% render 'stack-product-grid' with product: product_6, block_id: block.id, product_type: p_type6, dis_text_month: discount_text1, dis_text_days: discount_text2, sub_percent_text: percent_text   %}
          {% endif %}
          {% if product_7 != blank %}
          	{% render 'stack-product-grid' with product: product_7, block_id: block.id, product_type: p_type7, dis_text_month: discount_text1, dis_text_days: discount_text2, sub_percent_text: percent_text   %}
          {% endif %}
          {% if product_8 != blank %}
          	{% render 'stack-product-grid' with product: product_8, block_id: block.id, product_type: p_type8, dis_text_month: discount_text1, dis_text_days: discount_text2, sub_percent_text: percent_text   %}
          {% endif %}
            </div>
		</div>
     {% endfor %}
      
    </div>
  </div>
</div>

