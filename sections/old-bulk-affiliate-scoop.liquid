<style>
  #shopify-section-{{ section.id }} .aff_compare_prod_img 
  {
    z-index: 2;
    background: url("{{ section.settings.limage | img_url : 'master' }}");
    width: 220px;
    height: 200px;
    background-size: contain;
    background-repeat: no-repeat;
    margin-right: -75px;
    margin-left: -30px;
  }
  
  #shopify-section-{{ section.id }} .aff_compare_comp_img 
  {
      z-index: 2;
      background: url("{{ section.settings.rimage | img_url : 'master' }}");
      width: 180px;
      height: 200px;
      background-size: contain;
      background-repeat: no-repeat;
      margin-right: -0px;
      margin-left: -30px;
  }
</style>

<section class="TL_aff_content">
  <div class="aff_compare_section">
    {% if section.settings.heading!=blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading!=blank %}
      <h4 style="margin-bottom:20px;">{{ section.settings.subheading }}</h4>
    {% endif %}


  <div class="aff_chart">

    <div class="aff_compare">
      <div class="aff_compare_prod_img">&nbsp;</div>

      <div class="aff_compare_stats">

        {% for block1 in section.blocks limit: 3 %}
          <div class="aff_compare_stat">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><!--! Font Awesome Pro 6.1.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M438.6 105.4C451.1 117.9 451.1 138.1 438.6 150.6L182.6 406.6C170.1 419.1 149.9 419.1 137.4 406.6L9.372 278.6C-3.124 266.1-3.124 245.9 9.372 233.4C21.87 220.9 42.13 220.9 54.63 233.4L159.1 338.7L393.4 105.4C405.9 92.88 426.1 92.88 438.6 105.4H438.6z"/></svg>
            {{ block1.settings.title }}
          </div>
        {% endfor %}
        
      </div>
    </div>

    
            
    <div class="aff_compare aff_compare_comp">
      <div class="aff_compare_comp_img">&nbsp;</div>
        <div class="aff_compare_stats">

          {% for block2 in section.blocks offset:3 %}
            <div class="aff_compare_stat aff_compare_stat_comp">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512"><!--! Font Awesome Pro 6.1.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. --><path d="M310.6 361.4c12.5 12.5 12.5 32.75 0 45.25C304.4 412.9 296.2 416 288 416s-16.38-3.125-22.62-9.375L160 301.3L54.63 406.6C48.38 412.9 40.19 416 32 416S15.63 412.9 9.375 406.6c-12.5-12.5-12.5-32.75 0-45.25l105.4-105.4L9.375 150.6c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L160 210.8l105.4-105.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-105.4 105.4L310.6 361.4z"/></svg>
              {{ block2.settings.title }}
            </div>
          {% endfor %}
          
        </div>
      </div>

    </div>

    {% if section.settings.btn_text!=blank %}
      <a href="{{ section.settings.btn_link }}" class="aff_button_main">{{ section.settings.btn_text }}</a>
    {% endif %}

                
  </div>
</section>
{% schema %}
  {
    "name": "bulk-affiliate-scoop",
    "class": "td-legacy",
    "settings": [
      {
        "type":"text",
        "id":"heading",
        "label":"Heading"
      },
      {
        "type":"textarea",
        "id":"subheading",
        "label":"Sub Heading"
      },
      {
        "type":"image_picker",
        "id":"limage",
        "label":"Left Image"
      },
      {
        "type":"image_picker",
        "id":"rimage",
        "label":"Right Image"
      },
      {
        "type":"text",
        "id":"btn_text",
        "label":"Button Text"
      },
      {
        "type":"url",
        "id":"btn_link",
        "label":"Button Link"
      }
    ],
    "blocks":[
      {
        "name":"Block",
        "type":"text",
        "limit":6,
        "settings":[
          {
            "type":"text",
            "id":"title",
            "label":"Title"
          }
        ]
      }
    ],
    "presets":[
		{
			"name": "bulk-affiliate-scoop"
		}
	]
  }
{% endschema %}

