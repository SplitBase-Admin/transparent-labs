{% stylesheet %}
  .sb-blog-card {
    border-radius: 6px;
    overflow: hidden;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    color: var(--sb-fg-color);
    background: var(--sb-bg-color);
  }
  .sb-blog-card__image {
    height: 160px;
    width: 100%;
    object-fit: cover;
    display: block;
  }
  .sb-blog-card__content-featured {
    padding: 18px 12px 24px 12px;
    background-color: var(--color-background); 
    letter-spacing: 0;
    line-height: 1.3;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .sb-blog-card__blog-title {
    font-size: 14px;
    color: var(--sb-fg-color);
    opacity: 0.6;
    padding: 0;
    margin: 0;
  }
  .sb-blog-card__article-title {
    color: var(--sb-fg-color);
    font-size: 22px;
    letter-spacing: 0;
    padding: 0;
    margin: 0;
  }
  .sb-articles-grid__item--dt .sb-blog-card__article-title {
    font-size: 16px;
  }
  .sb-blog-card__content-wrapper {
    height: auto
  }
  .sb-articles-grid__item .sb-blog-card__content-featured {
    flex-direction: column;
    width: 100%;
  }

  .sb-articles-grid__item .sb-blog-card__content-wrapper {
    height: 100%;
  }
  
  @media screen and (min-width: 768px) {
    .sb-blog-card__content-featured {
      flex-direction: column-reverse;
    }
    .sb-blog-card__image {
      height: 200px;
    }
  }
  @media screen and (min-width: 1280px) {
    .sb-articles-grid__item--dt .sb-blog-card__article-title {
      font-size: 22px;
    }
  }
{% endstylesheet %}

{{ block.settings }}
<a href="{{ article.url }}" class="sb-blog-card sb-alignment--{{ block.settings.alignment }}" style="{%  render 'style-attributes', settings: block.settings %}">
  {% if article.image != blank %}
    {{ article.image | image_url: width: 900  | image_tag: 
      loading: 'lazy',
      class: 'sb-blog-card__image',
      height: article.image.height,
      alt: article.image.alt | default: article.title
    }}
  {% endif %}
  <div class="sb-blog-card__content-wrapper">
    <div class="sb-blog-card__content-featured">
      {% if blog != blank and block.settings.show_blog_title  %}
        <h3 class="sb-blog-card__blog-title">{{ blog.title }}</h3>
      {% elsif show_blog_title %}
        {%liquid
          assign split_1 = article.url | split: '/blogs/'
          assign split_2 = split_1[1] | split: '/'
          assign blog_handle = split_2[0] | strip
          assign article_blog = blogs[blog_handle]
          %}
        {% if article_blog and article_blog.title %}
          <h3 class="sb-blog-card__blog-title">{{ article_blog.title }}</h3>
        {% endif %}
      {% endif %}
      <h4 class="sb-blog-card__article-title">{{ article.title }}</h4>
    </div>
    {% comment %} TODO include the svg {% endcomment %}
  </div>
</a>
