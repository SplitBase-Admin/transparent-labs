{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc(40px * 0.75);
    padding-bottom: calc(40px  * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: 40px;
      padding-bottom: 40px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding" id="light-labs-widget-one" style="display:none;">
  <div id="light-labs-widget-root-version-one"></div>
</div>

