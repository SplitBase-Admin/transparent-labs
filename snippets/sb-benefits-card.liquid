{%  stylesheet %}
.sb-benefits-card {
  display: flex;
  flex-direction: column;
  background: var(--sb-ch-bg-color, #fff);
  color: var(--sb-ch-fg-color, #000);
  border-radius: 6px;
  height: 100%;
  overflow: hidden;
  justify-content: space-between;
}
.sb-benefits-card__content {
  padding: 12px;
}

.sb-benefits-card__heading {
  font-size: 20px;
  font-weight: 600;
  line-height: 1.3;
  margin: 0 0 4px;
}

.sb-benefits-card__text {
  font-size: 14px;
  line-height: 1.3;
  margin-bottom: 0;
  flex-grow: 1;
  color: var(--sb-copy-fg-color, --sb-ch-fg-color);
}

.sb-benefits-card__image-container {
  height: 140px;
  width: 100%;
  overflow: hidden;
}

.sb-benefits-card__image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

@media screen and (min-width: 768px) {
  .sb-benefits-card__content {
    padding: 12px 16px;
  }
  .sb-benefits-card__heading {
    font-size: 20px;
  }
  .sb-benefits-card__image-container {
    height: 180px;
  }
}
{% endstylesheet %}

<div class="sb-benefits-card">
  {% if settings.heading != blank or settings.description != blank %}
    <div class="sb-benefits-card__content">
    {% if settings.heading != blank %}
      <h3 class="sb-benefits-card__heading">{{ settings.heading }}</h3>
    {% endif %}
    
    {% if settings.description != blank %}
        <div class="sb-benefits-card__text">{{ settings.description }}</div>
      {% endif %}
    </div>
  {% endif %}
  
  {% if settings.image != blank %}
    <div class="sb-benefits-card__image-container">
      {{ 
        settings.image | image_url: width: 800 | image_tag: 
        class: "sb-benefits-card__image",
        loading: "lazy"
      }}
    </div>
  {% endif %}
</div>